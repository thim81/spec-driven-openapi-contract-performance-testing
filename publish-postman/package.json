{
  "name": "postman-publish",
  "version": "1.0.0",
  "description": "Publish OpenAPI to public Postman collection",
  "scripts": {
    "publish-openapi-yaml": "openapi-format ../openapi.yml  --output marvel.openapi.yaml --filterFile config/openapi-filter.yaml",
    "convert-openapi-cli": "portman --cliOptionsFile config/portman-cli-options.json",
    "publish-postman": "npm run convert-openapi-cli"
  },
  "author": "Tim Haselaars",
  "license": "ISC",
  "dependencies": {
    "@apideck/portman": "^1.26.2"
  }
}
